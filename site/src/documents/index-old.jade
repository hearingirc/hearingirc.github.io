  article#news.dark
    div.container
      div.sixteen.columns.titleset
        h2.remove-bottom Latest News
        h6.subheader
      ul.display-posts-listing
        each newsItem in env.helpers.getNewsItems(contents)
          li.listing-item
            a.title(href=newsItem.url)= newsItem.title
            span.date
              = ' (' + moment.utc(newsItem.date).format('DD/MMMM/YYYY') + ') - '
            span.excerpt= newsItem.markdown
      p
        a(href="news.html") View All News
  article#requests
    div.container
      div.sixteen.columns.titleset
        h2.remove-bottom Recent Requests for Proposals
        h6.subheader
      div.row
        div.two-thirds.column
          div.row
            h3 Download and read the Request for Proposal document.
            h3
              After reading the RFP document, please download and fill out the IRC Research Grant Application Form and &nbsp;
              a#contact-link(href="mailto:contact@hearingirc.com") email
              | &nbsp;it to us.
          p &nbsp;
          div#filelist1
            table(width="100%" border="0" cellpadding="7")
              tbody
                tr
                  td.lyf_td_icons(width="16")
                    img(src="img/icons/generic.png")
                  td.lyf_td_filename
                    a(href="http://hearingirc.com/requests/Research%20Grant%20Application%20Form%20rev2013b.doc" target="_blank")
                      Research Grant Application Form rev2013b.doc
                  td.lyf_td_size 72.5 KB
                tr
                  td.lyf_td_icons(width="16")
                    img(src="img/icons/generic.png")
                  td.lyf_td_filename
                    a(href="http://hearingirc.com/requests/RFP%202013%20Perception%20of%20dynamic%20spatial%20listening%20scenarios.doc" target="_blank")
                      RFP 2013 Perception of dynamic spatial listening scenarios.doc
                  td.lyf_td_size 47.0 KB
  article#contact.dark
    div.container
      div.sixteen.columns.titleset
        h2.remove-bottom Contact Us
        h6.subheader
      div.two-thirds.column
        | If you have any questions or need to get in touch, use the form below or&nbsp;
        a(title="Contact Us" href="mailto:contact@hearingirc.com") email
        | &nbsp;us.
        p

        form.send-with-ajax(method="post")
          div.row
            div.three.columns.alpha
              label(for="form-name")
                Your Name
                span required
            div.seven.columns.omega
              input(type="text" name="name" id="form-name" placeholder="Your Name" required="required")
          div.row
            div.three.columns.alpha
              label(for="form-email")
                Your Email
                span email required
            div.seven.columns.omega
              input(type="email" name="email" id="form-email" placeholder="your@email.com" required="required")
          div.row
            div.three.columns.alpha
              label(for="form-message") Message
            div.seven.columns.omega
              textarea(name="message" id="form-message")
          div.seven.columns.offset-by-three
            button(type="submit") Submit Form
            div.ajax-response
      div.one-third.column
        a(href="mailto:contact@hearingirc.com") contact@hearingirc.com
        br
